{
  "name": "inventory-management-system",
  "version": "0.1.0",
  "private": true,
  "description": "Inventory Management System for Malaysian SMEs - Auto Parts, Hardware & Spare Parts Wholesalers",
  "author": "Dynamic Edge",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:api": "pnpm --filter @ims/api run dev",
    "dev:web": "pnpm --filter @ims/web run dev",
    "build": "pnpm -r run build",
    "build:api": "pnpm --filter @ims/api run build",
    "build:web": "pnpm --filter @ims/web run build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "clean": "pnpm -r exec rm -rf node_modules dist .next .turbo",
    "db:generate": "pnpm --filter @ims/api run db:generate",
    "db:migrate": "pnpm --filter @ims/api run db:migrate",
    "db:studio": "pnpm --filter @ims/api run db:studio"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
